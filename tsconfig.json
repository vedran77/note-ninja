{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"removeComments": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "release",
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		]
	},
	"lib": ["es2015"],
	"include": [
        "src/index.ts",
        "src/**/*.ts"
    ],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
